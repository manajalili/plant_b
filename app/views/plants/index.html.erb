<div class="container">
  <div class="row">
    <% @plants.each do |plant| %>
      <div class="col-12 col-sm-6 col-md-3">
        <div class="plant">
          <%= cl_image_tag plant.photo.key, height: 200, width: 200, crop: :fill %>
            <div class="name">
              <span class="mr-3"><%= link_to plant.name, plant_path(plant) %></span>
              <%= plant.price %> â‚¬
            </div>
            <%= plant.description %>
        </div>
      </div>
    <% end %>
  </div>

  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

</div>


