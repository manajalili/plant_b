<div class="container">
  <div class="row">
    <% @plants.each do |plant| %>
      <div class="col-12 col-sm-6 col-md-3">
        <div class="plant index-plant-card">
          <div class="plant-image">
            <%= cl_image_tag plant.photo.key, height: 200, width: 221%>
          </div>
            <div class="name">
              <button type="button" class="btn btn-outline-secondary"><%= link_to plant.name, plant_path(plant) %></button>
              <p><%= plant.description %></p>
            </div>
          <div class="price">
            <%= plant.price %> â‚¬
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="map-container">
    <div
      id="map"
      style="width: 100%;
      height: 350px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>
