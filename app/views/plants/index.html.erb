<div class="container">
  <div class="plants">
  <% @plants.each do |plant| %>
  <div class="plant">
  <%= link_to plant.name, plant_path(plant) %>
  </div>
  <% end %>
</div>
</div>



<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

