<div class="plant-card">
  <%= cl_image_tag @plant.photo.key, height: 200, width: 200, crop: :fill %>
  <div class="card-infos">
    <div>
      <h2><%= @plant.name.capitalize %></h2>
      <p><%= @plant.description %></p>
    </div>
    <h5>Booking(s)</h5>
      <ul>
        <% @bookings.each do |booking| %>
          <li><%= booking.date %></li>
        <% end %>
      </ul>
  </div>
</div>

<div class="container">
  <div class="plant-card">
    <h3>Book This Plant</h3>
      <%= simple_form_for([@plant, @booking]) do |f| %>
        <%= f.hidden_field :plant_id, value: @plant.id %>
        <%= f.input :date %>
        <%= f.button :submit, class: "btn btn-success" %>
      <% end %>
    <br>
    <%= link_to "Back", plants_path, class: "btn btn-primary" %>

  </div>
</div>


<h3>Book This Plant</h3>
<%= simple_form_for([@plant, @booking]) do |f| %>
  <%= f.hidden_field :plant_id, value: @plant.id %>
  <%= f.input :date %>
  <%= f.button :submit %>
<% end %>


<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

