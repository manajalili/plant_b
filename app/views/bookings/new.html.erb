<%= form_for([@plant, @booking]) do |f| %>

  <%= f.text_field :start_date, placeholder: 'Start Date', class: 'form-control', readonly: 'true' %>
  <%= f.text_field :end_date, placeholder: 'End Date', class: 'form-control', disabled: 'true', readonly: 'true'  %>


  <%= f.hidden_field :plant_id, value: @plant.id %>
  <%= f.input :photo, as: :file %>


  <%= f.submit "Book Now", class: "btn btn-primary" %>
<% end %>


<%= #f.hidden_field :price, value: @plant.price %>
  <%= #f.hidden_field :total, value: 'booking_total' %>

