<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "plantB-logo-square-01.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <div class="form-inline">
        <%= form_tag plants_path, method: :get do %>
        <!-- <%= text_field_tag :query,
         params[:query],
         class: "form-control",
         placeholder: "Find a plant"
       %> -->
       <%= select_tag :query,
       options_from_collection_for_select(
         Plant.all, "name", "name",
         params[:query]),
         iclude_blank: true,
         class: "js-exammple-basic-single hidden",
         id: "plant-search",
         data: {placeholder: "Find a plant"}
        %>
      <%= submit_tag "Search", class: "btn btn-success", id: "plant-submit" %>
       <% end %>
      </div>
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", plants_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Orders", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Log-out", destroy_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "beyonce.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Order", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
